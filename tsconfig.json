{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "packages/*/src"
      ]
    },
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "pretty": true,


    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowUnreachableCode": true,
    // "noImplicitAny" : true,
    // "noUnusedParameters": true,



    "forceConsistentCasingInFileNames": true,
    "newLine": "CRLF",
    "alwaysStrict": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "src/migrations/archive"
  ]
}
